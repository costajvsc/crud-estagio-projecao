@model IEnumerable<crud_estagio_projecao.Models.Cliente>
@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <div class="d-flex justify-content-evenly">

        @foreach (var item in Model)
        {

        <div class="card">
            <div class="card-header">
                <h2 class="name-client">
                    @Html.DisplayFor(modelItem => item.nome)
                    <span class="id-client">#@Html.DisplayFor(modelItem => item.ClienteID)</span>
                </h2>
            </div>
            <div class="card-body">
                <ul class="list-contat">
                    @foreach (var phone in item.Telefones)
                    {
                        <li class="phone">@Html.DisplayFor(modelItem => phone.ddd) @Html.DisplayFor(modelItem => phone.telefone)</li>
                    }

                </ul>
            </div>
            <div class="card-footer">
                <i id="btn-add-phone" onclick="showModalAddPhone(@item.ClienteID, '@Html.Raw(@item.nome)', '@Html.Raw(@item.Telefones)')" class="fas fa-phone fa-lg mx-0 text-info"></i>
                <i id="btn-delete-client" onclick="showModalDeleteClient(@item.ClienteID, '@Html.Raw(@item.nome)', '@Html.Raw(@item.Telefones)')" class="far fa-trash-alt mx-0 fa-lg text-danger"></i>
                <i id="btn-edit-client" onclick="showModalEditClient(@item.ClienteID, '@Html.Raw(@item.nome)', '@Html.Raw(@item.Telefones)')" class="fas fa-edit fa-lg mx-0 text-warning"></i>
            </div>
            
        </div>
        }

    </div>
    <div class="btn-add" id="btn-add-client" onclick="showModalAddClient()">
        <i class="fas fa-plus"></i>
    </div>
</div>

<div class="modal-wrap" data-js="modal-add-client">
    <div class="modal">
        <div class="container">
            <div class="modal-header">
                <div>
                    <h1>Adicionar cliente</h1>
                </div>
            </div>
            <div class="modal-body">
                <form action="/Cliente/Create" method="post">
                    <input type="text" class="input" name="nome" id="name-cliente" placeholder="Nome do cliente" required>
                    <button type="reset" class="btn-dismiss-add-client btn btn-outline-info text-info">Cancelar</button>
                    <button type="submit" class="btn btn-success">Salvar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal-wrap" data-js="modal-edit-client">
    <div class="modal">
        <div class="container">
            <div class="modal-header">
                <div>
                    <h1>Editar cliente</h1>
                </div>
            </div>
            <div class="modal-body">
                <h2 class="name-client" data-js="label-name-client-edit">
                    Nome do cliente
                    <span class="id-client">#0001</span>
                </h2>
                <form action="/Cliente/Edit" method="post">
                    <input type="hidden" name="ClienteID"  id="id-client-edit">
                    <input type="text" class="input" name="nome" id="name-client-edit" placeholder="(00) 0 0000-0000">
                    <button type="reset" class="btn-dismiss-edit-client btn btn-outline-info text-info">Cancelar</button>
                    <button type="submit" class="btn btn-success">Salvar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal-wrap" data-js="modal-delete-client">
    <div class="modal">
        <div class="container">
            <div class="modal-header">
                <div>
                    <h1>Excluir cliente</h1>
                </div>
            </div>
            <div class="modal-body">
                <div class="text-center text-danger fa-5x">
                    <i class="fas fa-times"></i>
                </div>
                <h3 class="name-client" data-js="label-name-client-delete">
                    Nome do cliente
                    <span class="id-client">#0001</span>
                </h3>
                <h3>Tem certeza que deseja excluir este cliete?</h3>
                <p>Todas as informações sobre o cliente serão perdida.</p>

                <form action="/Cliente/Delete" method="post">
                    <input type="hidden" name="ClienteID" id="id-client-delete">
                    <button type="reset" class="btn-dismiss-delete-client btn btn-warning">Cancelar</button>
                    <button type="submit" class="btn btn-outline-danger text-danger">Excluir</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal-wrap" data-js="modal-add-phone">
